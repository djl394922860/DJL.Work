@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginOrRegisterLayout.cshtml";
}
@section Header{
    @Styles.Render("~/Content/css/register.css")
    @Styles.Render("~/Content/BootstrapValidator/css/bootstrapValidator.min.css")
}

<div class="container">
    <form id="formRegister" class="form_sign" role="form" action="@Url.Action("Register","Home")" method="post">
        <h5 class="header">欢迎注册</h5>
        <div class="form-group">
            <label for="email">邮箱：</label>
            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="name">名字：</label>
            <input type="text" class="form-control" id="name" name="Name" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="pwd">密码：</label>
            <input type="password" class="form-control" id="pwd" name="Password" placeholder="Password">
        </div>

        <div class="form-group">
            <label for="pwd2">重复密码：</label>
            <input type="password" class="form-control" id="pwd2" name="Password2" placeholder="Password">
        </div>

        <div class="form-group" style="margin-bottom:20px;">
            <label for="vcode">验证码：</label>
            <br>
            <input type="text" class="form-control vcode" id="vcode" name="Vcode" placeholder="code">
            <img src="@Url.Action("ValidataCode", "Home")" alt="验证码" style="cursor:pointer;height:32px;width:auto" onclick="window.Register.changeImage(this)" id="imgCode">
        </div>
        @Html.AntiForgeryToken()
        <button id="btnRegister" type="submit" class="btn btn-primary btn-block">确认信息</button>
        <a class="extra" href="@Url.Action("Login","Home")">登录</a><a class="extra" href="@Url.Action("Forget", "Home")">找回密码？</a><a class="extra" href="/">回到首页</a>
    </form>
</div>

@section Footer{
    @Scripts.Render("~/Content/BootstrapValidator/js/bootstrapValidator.min.js")

    @Scripts.Render("~/Content/js/register.js")
}